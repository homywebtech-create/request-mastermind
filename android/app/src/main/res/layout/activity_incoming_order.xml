<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E293B"
    android:padding="24dp">

    <!-- Top Section with Icon -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Icon -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/notification_icon_bg"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/orderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Offer"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Body -->
        <TextView
            android:id="@+id/orderBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 available offer"
            android:textColor="#94A3B8"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <!-- Submit Quote Button -->
        <Button
            android:id="@+id/submitQuoteButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Submit Quote"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary_bg"
            android:layout_marginBottom="12dp" />

        <!-- Skip Button -->
        <Button
            android:id="@+id/skipButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Skip This Offer"
            android:textColor="#64748B"
            android:textSize="16sp"
            android:background="@drawable/button_secondary_bg" />
    </LinearLayout>

</RelativeLayout>
